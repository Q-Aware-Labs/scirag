# SciRAG Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# SECURITY - CORS Configuration (REQUIRED FOR PRODUCTION)
# ============================================================================
# Comma-separated list of allowed frontend origins
# Local development:
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production (update with your actual Vercel domain):
# ALLOWED_ORIGINS=https://your-frontend.vercel.app

# Multiple domains example:
# ALLOWED_ORIGINS=https://scirag.vercel.app,https://scirag-staging.vercel.app,http://localhost:3000


# ============================================================================
# API KEYS (OPTIONAL - Users can provide their own via UI)
# ============================================================================
# Anthropic API Key - Only needed if you want to provide a default server key
# Get yours at: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-api03-...


# ============================================================================
# ARXIV SETTINGS
# ============================================================================
# Maximum number of papers to fetch per search
MAX_PAPERS=5


# ============================================================================
# PDF PROCESSING
# ============================================================================
# Number of words per text chunk
CHUNK_SIZE=1000

# Number of overlapping words between chunks
CHUNK_OVERLAP=200

# Directory to store downloaded PDFs
DOWNLOAD_DIR=./papers


# ============================================================================
# EMBEDDINGS & VECTOR DATABASE
# ============================================================================
# Sentence transformer model for embeddings
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, etc.
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./chroma_db


# ============================================================================
# LLM SETTINGS
# ============================================================================
# Default Claude model to use (if ANTHROPIC_API_KEY is set)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Maximum tokens for LLM responses
MAX_TOKENS=2000


# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (verbose logging)
DEBUG=false


# ============================================================================
# DEPLOYMENT (Railway Specific)
# ============================================================================
# Railway automatically provides PORT - no need to set manually
# PORT=8000
